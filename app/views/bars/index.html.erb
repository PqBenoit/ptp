<h1>Listing bars</h1>

<table id="admin-table-bars">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Member</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bars.each do |bar| %>
  <tr>
    <td><%= bar.name %></td>
    <td><%= bar.price %></td>
    <td><%= bar.address %></td>
    <td><%= bar.latitude %></td>
    <td><%= bar.longitude %></td>
    <td><%= link_to 'Show', bar %></td>
    <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
    <td><%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

