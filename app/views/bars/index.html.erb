<h1>Listing barssss</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Adress</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bars.each do |bar| %>
  <tr>
    <td><%= bar.name %></td>
    <td><%= bar.adress %></td>
    <td><%= bar.price %></td>
    <td><%= link_to 'Show', bar %></td>
    <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
    <td><%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<div id="bars">
  <% @bars.each do |bar| %>
      <div class="bar" data-name="<%= bar.name %>" data-lat="<%= bar.latitude %>" data-lnt="<%= bar.longitude %>">
        <header class="bar-header">
          <div class="head-content">
            <h2><%= bar.name %></h2>
            <div class="address">
              <p class="street">9 quai de la douane</p>
              <p class="ville">33000 Bordeaux</p>
            </div>
            <div class="price"><p>5â‚¬</p></div>
          </div>
        </header>
        <div class="sub-container">
          <div class="sub-content">
            <p class="ambiance">Ambiance : </p><div class="notice-container"><div class="notice-bar" data-average-ambiance="3.6"></div></div>
            <div class="avis">
              <ul class="list-avis">
                <li class="avi">
                  <h3>Romain</h3>
                  <div class="note-container"><div class="note"></div></div>
                  <p>Ce bar est pas mal mais pourri en fait. truc de pds</p>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

  <% end %>
</div>
<br />

<%= link_to 'New Bar', new_bar_path %>
<div id="map" style="width: 370px; height: 600px;"></div>

